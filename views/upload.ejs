<% include partials/header %>
<div class="ui grid">
	<div class= "eight wide column centered gird">
		<h1>Add new photo</h1>

		<form class= "ui form" action="/photos" method="POST">
		<div class="field">
			<label>Image Title</label>
			<input type="text" name="name" placeholder="title">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="src" placeholder="imageURL">
		</div>
		<div class="field">
			<label>Description</label>
			<input type="text" name="des" placeholder="imageURL">
		</div>
		<button class="ui primary button" type = "submit">Submit</button>
	</form>
	</div>
	
</div>



