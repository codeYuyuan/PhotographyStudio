<% include ../partials/header %>
<div class="ui grid">
	<div class= "eight wide column centered gird">
		<h1>Edit photo</h1>

		<form class= "ui form" action="/photos/<%=photo._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Image Title</label>
			<input type="text" name="photo[name]" value="<%=photo.name%>">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="photo[src]" value="<%=photo.src%>">
		</div>
		<div class="field">
			<label>Description</label>
			<textarea name = "photo[des]"><%=photo.des%></textarea>
		</div>
		<button class="ui primary button" type = "submit">Submit</button>
	</form>
	</div>
	
</div>



<% include ../partials/footer%>